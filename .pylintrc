[MASTER]
ignore=tests
extension-pkg-whitelist=pydantic,torch
load-plugins=pylint.extensions.typing
jobs=1
unsafe-load-any-extension=no

[MESSAGES CONTROL]
disable=
    missing-docstring,
    too-few-public-methods,
    too-many-arguments,
    too-many-instance-attributes,
    too-many-locals,
    invalid-name,
    duplicate-code,
    no-member,
    fixme,
    broad-except,
    too-many-lines,
    import-error,
    logging-fstring-interpolation

[TYPECHECK]
generated-members=numpy.*,torch.*

[BASIC]
good-names=i,j,k,ex,Run,_
variable-rgx=[a-z_][a-z0-9_]{2,30}$
argument-rgx=[a-z_][a-z0-9_]{2,30}$
function-rgx=[a-z_][a-z0-9_]{2,50}$
method-rgx=[a-z_][a-z0-9_]{2,50}$
module-rgx=([a-z_][a-z0-9_]*)$
attr-rgx=[a-z_][a-z0-9_]{2,30}$
class-rgx=[A-Z_][a-zA-Z0-9]+$
const-rgx=([A-Z_][A-Z0-9_]*)|(__.*__)
inlinevar-rgx=[A-Za-z_][A-Za-z0-9_]*$

[FORMAT]
max-line-length=100
indent-string='    '
indent-after-paren=4

[LOGGING]
logging-modules=structlog,logging

[DESIGN]
max-args=6
max-attributes=10
max-locals=15
max-branches=12
max-statements=60

[IMPORTS]
known-third-party=pydantic,fastapi,torch,transformers,chromadb
known-first-party=agent,llm,eval,tools,api,db
